<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="short_link-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :url %>
    <%= textarea f, :url %>
    <%= error_tag f, :url %>

    <%= label f, :key %>
    <%= text_input f, :key %>
    <%= error_tag f, :key %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
